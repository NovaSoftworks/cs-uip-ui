{
  "prettier.documentSelectors": ["**/*.svelte"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "svelte.enable-ts-plugin": true,
  "yaml.validate": false,
  "[yaml]": {
    "editor.formatOnSave": false // Disable auto formatting for YAML files to prevent errors with Helm templates
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/build": true,
    "**/.svelte-kit": true,
    "**/.vscode": true,
    "**/package-lock.json": true,
    "**/vite.config.*": true,
    "**/svelte.config.*": true,
    "**/tsconfig.*": true,
    "**/.env*": true,
    "**/.prettierrc*": true,
    "**/.dockerignore": true,
    "**/.npmrc": true,
    "**/.prettierignore": true,
    "**/.gitignore": true
  }
}
