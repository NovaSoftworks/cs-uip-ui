{
  "prettier.documentSelectors": ["**/*.svelte"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "svelte.enable-ts-plugin": true,
  "yaml.validate": false,
  "[yaml]": {
    "editor.formatOnSave": false // Disable auto formatting for YAML files to prevent errors with Helm templates
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
    "**/build": false,
    "**/.svelte-kit": false,
    "**/.vscode": false,
    "**/package-lock.json": false,
    "**/vite.config.*": false,
    "**/svelte.config.*": false,
    "**/tsconfig.*": false,
    "**/.env*": false,
    "**/.prettierrc*": false,
    "**/.dockerignore": false,
    "**/.npmrc": false,
    "**/.prettierignore": false,
    "**/.gitignore": false
  }
}
